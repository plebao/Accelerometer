<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ll4713.accelerometer.MainActivity">

    <TextView
        android:id="@+id/x_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="x axis"/>
    <TextView
        android:id="@+id/y_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x_axis"
        android:text="y axis"/>
    <TextView
        android:id="@+id/z_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/y_axis"
        android:text="z axis"/>

    <TextView
        android:id="@+id/acceleration_magnitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_axis"
        android:text="acceleration_magnitude"/>

    <TextView
        android:id="@+id/filtered_acceleration_magnitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acceleration_magnitude"
        android:text="filtered_acceleration_magnitude"/>



</android.widget.RelativeLayout>
